<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424" >
    
    <TextView
        android:id="@+id/timepicker_tag"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Arrival Time"
        android:textSize="24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TimePicker
        android:id="@+id/arrival_time_tp"
        android:layout_below="@+id/timepicker_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView 
        android:id="@+id/description"
        android:layout_below="@+id/arrival_time_tp"
        android:textSize="24dp" android:text="Description"  android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content" android:layout_marginLeft="10dp" 
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/description"
		android:id="@+id/destination"
		android:layout_margin="10dp"
		android:hint="Pennsylvania Ave. or CSUEB"
		android:lines="1"
        />
    <Button
        android:id="@+id/done_button"
        android:text="Done"
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        />
	

</RelativeLayout>